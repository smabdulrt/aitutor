# -----------------------------------------------
# Stage 1: Base Python image
# -----------------------------------------------
FROM python:3.11-slim

# Set working directory
WORKDIR /app
# -----------------------------------------------
# Stage 2: System dependencies
# -----------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libssl-dev \
    libffi-dev \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# -----------------------------------------------
# Stage 3: Python dependencies
# -----------------------------------------------
# Copy only requirements first for caching
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# -----------------------------------------------
# Stage 4: Copy the application code
# -----------------------------------------------
COPY . .

# -----------------------------------------------
# Stage 5: Expose port and start server
# -----------------------------------------------
EXPOSE 8080
ENV PORT=8080

CMD ["python", "-m", "DashSystem.dash_api"]
# CMD exec uvicorn dash_api:app --host 0.0.0.0 --port $PORT

# If dash_system.py contains the main app, use instead:
# CMD ["python", "dash_system.py"]
# CMD ["uvicorn", "dash_api:app", "--host", "0.0.0.0", "--port", "8000"]
